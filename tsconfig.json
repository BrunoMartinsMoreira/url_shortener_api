{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                                         
    "strict": false,                                      
    "skipLibCheck": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true                              
  }
}
